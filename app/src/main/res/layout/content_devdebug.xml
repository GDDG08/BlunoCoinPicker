<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/TestLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C10" />

            <TextView
                android:id="@+id/Coin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C5" />

            <TextView
                android:id="@+id/Coin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C1" />

            <TextView
                android:id="@+id/Coin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:max="360" />

        <Switch
            android:id="@+id/dev_switch1_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="呼吸灯" />

        <Switch
            android:id="@+id/dev_switch2_light_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单灯光呼吸" />

        <Switch
            android:id="@+id/dev_switch3_bluebit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BlueBit模式一" />

        <Switch
            android:id="@+id/dev_switch4_bluebit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BlueBit模式二" />

        <Button
            android:id="@+id/dev_button_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="收发测试" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TestLayout"
        android:layout_marginTop="0dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/serialSendText"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/editText2"
            android:layout_below="@+id/editText2">

            <TextView
                android:id="@+id/serialReceivedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/serialSendText"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/editText2"
                android:layout_below="@+id/editText2"
                android:ems="10"
                android:textSize="10sp" />
        </ScrollView>

        <Button
            android:id="@+id/buttonSerialSend"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-73dp"
            android:text="Send Data" />

        <EditText
            android:id="@+id/serialSendText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/buttonSerialSend"
            android:layout_marginStart="15dp"
            android:background="#555555"
            android:bufferType="editable"
            android:ems="10"
            android:hint="Data sending Area"
            android:inputType="text"
            android:textColor="#999999"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/serialSendText"
            android:layout_marginTop="73dp"
            android:ems="10"
            android:text="Received Data:"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>