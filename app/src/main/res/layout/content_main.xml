<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal"
	android:orientation="vertical"
	android:paddingLeft="0dp">


	<TextView
		android:id="@+id/textView2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:shadowColor="@color/color_bg_success"
		android:shadowRadius="5"
		android:text="智能硬币分拣盒"
		android:textColor="@color/color_radar_bak"
		android:textSize="20sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:shadowColor="#00bcd4"
		android:shadowRadius="3"
		android:text="出品·衡中3D打印社"
		android:textSize="16sp"
		android:textStyle="bold" />

	<VideoView
		android:id="@+id/main_videoView"
		android:layout_width="700dp"
		android:layout_height="400dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="40dp" />

	<ImageView
		android:id="@+id/main_imageView"
		android:layout_width="700dp"
		android:layout_height="400dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="40dp"
		android:src="@mipmap/coin_aer_390"
		android:visibility="gone"
		app:srcCompat="@mipmap/coin_aer_390" />

</LinearLayout>

