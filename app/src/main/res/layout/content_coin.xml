<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:focusable="true"
	android:focusableInTouchMode="true"
	tools:context=".MainActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/imageView_animate"
		android:layout_marginTop="0dp">

		<com.zzh.blunocoin.tool.StepView.XiaoMiSportView
			android:id="@+id/coin_StepView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<com.zzh.blunocoin.tool.ScrollNumber.ScrollNumberView
			android:id="@+id/coin_Scrollnum_1"
			android:layout_width="200dip"
			android:layout_height="80dip"
			android:layout_alignParentEnd="true"
			android:layout_below="@+id/coin_StepView"
			app:number="0"
			app:padding_start="10dip"
			app:text_size="24dip" />

		<com.zzh.blunocoin.tool.ScrollNumber.ScrollNumberView
			android:id="@+id/coin_Scrollnum_5"
			android:layout_width="200dip"
			android:layout_height="80dip"
			android:layout_alignParentEnd="true"
			android:layout_below="@+id/coin_Scrollnum_1"
			app:number="0"
			app:padding_start="10dip"
			app:text_size="24dip" />

		<com.zzh.blunocoin.tool.ScrollNumber.ScrollNumberView
			android:id="@+id/coin_Scrollnum_10"
			android:layout_width="200dip"
			android:layout_height="80dip"
			android:layout_alignParentEnd="true"
			android:layout_below="@+id/coin_Scrollnum_5"
			app:number="0"
			app:padding_start="10dip"
			app:text_size="24dip" />
	</RelativeLayout>

</RelativeLayout>


